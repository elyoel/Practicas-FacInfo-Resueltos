programa act3
procesos 
  proceso contarPapel(ES papel: numero)
  variables
    aux: numero
  comenzar
    aux:= 0
    mientras HayPapelEnLaEsquina
      tomarPapel
      aux:= aux + 1
    repetir aux
      depositarPapel
    papel:= papel + aux
  fin
  proceso contarFlores(ES flor: numero)
  variables
    aux: numero
  comenzar
    aux:= 0
    mientras HayFlorEnLaEsquina
      tomarFlor
      aux := aux + 1
    repetir aux
      depositarFlor
    flor:= flor + aux
  fin
  proceso contarFyP(ES flor:numero; ES papel: numero)
  comenzar
    contarFlores(flor)
    contarPapel(papel)
  fin
  proceso izquierda
  comenzar
    repetir 3
      derecha
  fin
  proceso semiEscalon(E basexAltura: numero; ES f: numero; ES p: numero)
  comenzar
    repetir basexAltura
      contarFyP(f, p)
      mover
  fin
  proceso recorrerEscalera(ES cumplio: numero)
  variables
    altura: numero
    f, p: numero
  comenzar
    altura:= 1
    repetir 3
      f:= 0
      p:= 0
      semiEscalon(altura, f, p)
      derecha
      semiEscalon(altura, f, p)
      izquierda
      altura:= altura + 1
      si (p > f)
        cumplio:= cumplio + 1
  fin
areas
  ciudad: AreaC (1,1,100,100)
robots
  robot robot1
  variables
    cumplio: numero
  comenzar
    cumplio:= 0
    recorrerEscalera(cumplio)
    Informar("Cantidad de escalones en los que la cantidad de papeles supero en uno a la cantidad de flores", cumplio)
  fin
variables
  R1, R2, R3, R4: robot1
comenzar
  AsignarArea(R1, ciudad)
  AsignarArea(R2, ciudad)
  AsignarArea(R3, ciudad)
  AsignarArea(R4, ciudad)
  Iniciar(R1, 10,10)
  Iniciar(R2, 15,10)
  Iniciar(R3, 20,10)
  Iniciar(R4, 25,10)
fin